    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,0">
                <TextBox Width="250" Height="40"/>
                <Button Width="80" Margin="10,0,0,0" Height="40" Content="검색"/>
            </StackPanel>

            <ListBox Grid.Row="1" Margin="10,0"/>

            <Button Grid.Row="2" Width="300" Height="40" Margin="10,0" HorizontalAlignment="Left" Content="뒤로가기"/>
        </Grid>


        <Grid Grid.Column="1">
            <WebBrowser Margin="10" Source="https://dbajk.github.io/c_API_kakao/"/>
        </Grid>
    </Grid>

