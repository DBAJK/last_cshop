<Window x:Class="WpfApp3.Views.KakaoAPI"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp3.Views"
      xmlns:view="clr-namespace:WpfApp3.Views"
      mc:Ignorable="d" 
      d:DesignHeight="839" d:DesignWidth="1448"
      Title="KakaoAPI">

    <Grid>
        <Grid x:Name="xMapView" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,0">
                    <TextBox Name="tbox_query" Width="230" Height="40" FontSize="25"  FontFamily="Arial"/>
                    <Button Name="btn_search" Click="Button_Click" Width="90" Margin="10,0,0,0" Height="40" Content="검색"/>
                </StackPanel>

                <ListBox Name="lbox_locale" SelectionChanged="ListBox_SelectionChanged" 
                         Grid.Row="1" Margin="10,0"/>

                <StackPanel Orientation="Horizontal" Grid.Row="2">
                    <Button Width="200" Height="40" Margin="10,0" HorizontalAlignment="Left" Content="로그아웃" Command="{Binding LogoutCommand}"/>
                    <Grid>
                    <Grid x:Name="xAdminView" >
                        <Button Width="100" Height="40" Margin="10,0" HorizontalAlignment="Left" Content="회원관리" Command="{Binding MemberTableCommand}"/>
                    </Grid>
                    <Grid x:Name="xUserView" Visibility="Hidden">
                        <Button Width="100" Height="40" Margin="10,0" HorizontalAlignment="Left" Content="민원 신청" Command="{Binding UserComplaint}"/>
                    </Grid>
                    </Grid>
                </StackPanel>
            </Grid>


            <Grid Grid.Column="1">

                <WebBrowser Name="kakaoMapB" Margin="10" Source="https://dbajk.github.io/c_API_kakao/" />
            </Grid>
        </Grid>
    </Grid>
</Window>
